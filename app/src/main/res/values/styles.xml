<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="background">@android:color/black</item>
    </style>
    <style name="NotesTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@android:color/black</item>
    </style>
    <style name="TextLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="background">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="background">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="background">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SpinnerTextStyle">
        <item name="background">@android:color/white</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Color del texto seleccionado -->
    </style>
</resources>