<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">
    <View
        android:id="@+id/vBackground"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/white"/>
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_dgtic_color_300"
        android:layout_marginTop="5dp"
        android:scaleType="centerInside"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mago"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mago Juan Perez"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="juan.perez@magos.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_below="@id/txtName"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1 234 567 890"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_toEndOf="@id/imgProfile"
            android:layout_below="@id/txtEmail"
            android:layout_marginTop="4dp"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:id="@+id/ibWhatsapp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/whats_app"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="7dp"/>
        <ImageButton
            android:id="@+id/ibInstagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_instagram"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="7dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibBack"
            android:padding="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <ImageButton
            android:id="@+id/ibHome"
            android:padding="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"/>
    </LinearLayout>
</RelativeLayout>