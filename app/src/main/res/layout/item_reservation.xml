<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivReservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_launcher"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/tvCountry"
                app:layout_constraintStart_toEndOf="@id/ivReservation"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=", "
                android:id="@+id/tvSeparation"
                app:layout_constraintStart_toEndOf="@id/tvCountry"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCity"
                app:layout_constraintStart_toEndOf="@id/tvSeparation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="$"
                android:id="@+id/tvCurrency"
                app:layout_constraintStart_toEndOf="@id/ivReservation"
                app:layout_constraintTop_toBottomOf="@id/tvCountry"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPrice"
                app:layout_constraintStart_toEndOf="@id/tvCurrency"
                app:layout_constraintTop_toBottomOf="@id/tvCountry"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" por "
                android:id="@+id/tvFor"
                app:layout_constraintStart_toEndOf="@id/tvPrice"
                app:layout_constraintTop_toBottomOf="@id/tvCountry"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNumberNights"
                app:layout_constraintStart_toEndOf="@id/tvFor"
                app:layout_constraintTop_toBottomOf="@id/tvCountry"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" noches"
                android:id="@+id/tvNights"
                app:layout_constraintStart_toEndOf="@id/tvNumberNights"
                app:layout_constraintTop_toBottomOf="@id/tvCountry"
                app:layout_goneMarginTop="10dp"
                android:maxLines="2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>